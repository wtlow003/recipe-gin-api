                },
                "fat": {
                    "type": "integer"
                },
                "fiber": {
                    "type": "integer"
                },
                "ingredients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "instructions": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "protein": {
                    "type": "integer"
                },
                "satfat": {
                    "type": "integer"
                },
                "servings": {
                    "type": "integer"
                },
                "sugar": {
                    "type": "integer"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
