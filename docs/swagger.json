{
    "swagger": "2.0",
    "info": {
        "description": "Demo recipe RESTful API developed with Gin framework.",
        "title": "Recipe API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Low Wei Teck (Jensen)",
            "url": "https://www.linkedin.com/in/weitecklow/",
            "email": "jensenlwt@gmail.com"
